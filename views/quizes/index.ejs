<div class="row" id="search">
  <div class="col-xs-12">
    <form  class="form-search" method="get" action="/quizes">
        <div class="input-group">
          <input type="text" class="form-control" name = "search" placeholder="Introduce el texto de la pregunta a buscar...">
          <span class="input-group-btn">
            <button class="btn btn-default" type="submit"><span class="glyphicon glyphicon-search"></span></button>
          </span>
        </div><!-- /input-group -->
    </form>
  </div>
</div>

<div class="row-fluid" id="wrapper">
	<div class="col-xs-8 col-xs-offset-2">
    <%if (session.user) {%>
    <a href="/quizes/new"><button type="button" class="btn btn-primary pull-right"> Crear pregunta </button></a>
    <%}%>
		<table class="table table-striped table-bordered table-condensed text-center">
			<thead>
				<tr>
		        <th class="text-center">Temática</th>
		        <th class="text-center">Pregunta</th>
            <%if (session.user) {%>
		        <th class="text-center">Editar</th>
		        <th class="text-center">Eliminar</th>
            <%}%>
		    </tr>
			</thead>
			<tbody>
	        <% var i; for (i=0; i<quizes.length; i++){ %>
		        <tr>
					<td class="glyphicon icon-<%= quizes[i].tematica %>"></td>
					<td class="text-left"><a href="quizes/<%= quizes[i].id%>"><%= quizes[i].pregunta %></a></td>
					<%if (session.user) {%>
					<td><a href="quizes/<%= quizes[i].id%>/edit"><button class="btn btn-info editar"><span class="glyphicon glyphicon-edit"></span></button></a></td>
					<td>
					<form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
						<button type="submit" class="btn btn-danger eliminar" onClick="return confirm('Borrar: <%= quizes[i].pregunta%>');">
						<span class="glyphicon glyphicon-trash"></span>
						</button>
					</form>
					</td>
					<%}%>
		        </tr>
            <%}%>
			</tbody>
		</table>
	</div>
</div>

